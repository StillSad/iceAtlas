<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_toobar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_cat" />

    <EditText
        android:id="@+id/et_phone"
        style="@style/LayoutPadding26"
        android:layout_height="58dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_phone"
        android:drawablePadding="10dp"
        android:hint="请输入家长手机号"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_lock"
        android:drawablePadding="10dp"
        android:hint="请设置密码"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <Button
        android:id="@+id/btn_login"
        style="@style/LayoutMargin26"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/shape_btn_point_primary"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <FrameLayout
        style="@style/LayoutMargin26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_forget_pwd"
            style="@style/LayoutTextLeft"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/forget_psw"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_register"
            style="@style/LayoutTextRight"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="@string/register"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

    </FrameLayout>
</LinearLayout>


