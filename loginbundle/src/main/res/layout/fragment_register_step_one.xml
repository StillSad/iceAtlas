<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_camera" />

    <View
        style="@style/BottomLineMargin"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/tv_select_kindergarten"
        style="@style/LayoutPadding26"
        android:layout_height="58dp"
        android:background="@null"
        android:drawableEnd="@mipmap/ic_arrow_right"
        android:drawablePadding="10dp"
        android:drawableStart="@mipmap/icon_house"
        android:gravity="center_vertical"
        android:hint="请选择幼儿园"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <EditText
        android:id="@+id/et_truename"
        style="@style/LayoutPadding26"
        android:layout_height="58dp"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_child"
        android:drawablePadding="10dp"
        android:hint="请输入孩子姓名"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <EditText
        android:id="@+id/et_schoolno"
        style="@style/LayoutPadding26"
        android:layout_height="58dp"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_number"
        android:drawablePadding="10dp"
        android:hint="请输入孩子学号号码"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <TextView
        android:id="@+id/tv_birth"
        style="@style/LayoutPadding26"
        android:layout_height="58dp"
        android:background="@null"
        android:drawableEnd="@mipmap/ic_arrow_right"
        android:drawablePadding="10dp"
        android:drawableStart="@mipmap/icon_birth"
        android:gravity="center_vertical"
        android:hint="请选择出生日期"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <Button
        android:id="@+id/btn_next"
        style="@style/LayoutMargin26"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/shape_btn_point_primary"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>

