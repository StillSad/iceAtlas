<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_mobile"
        style="@style/LayoutPadding26"
        android:layout_height="58dp"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_phone"
        android:drawablePadding="10dp"
        android:hint="请输入家长手机号"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_mobile_code"
            style="@style/LayoutPadding26"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_msg"
            android:drawablePadding="10dp"
            android:hint="请输入手机验证码"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/bottom_line" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


    <View style="@style/BottomLineMargin" />

    <EditText
        android:id="@+id/et_pwd"
        style="@style/LayoutPadding26"
        android:layout_height="58dp"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_lock"
        android:drawablePadding="10dp"
        android:hint="设置密码"
        android:textSize="15sp" />

    <View style="@style/BottomLineMargin" />

    <Button
        android:id="@+id/btn_next"
        style="@style/LayoutMargin26"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/shape_btn_point_primary"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        style="@style/LayoutTextRight"
        android:layout_marginRight="26dp"
        android:layout_marginTop="19dp"
        android:text="立即登录"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />
</LinearLayout>
